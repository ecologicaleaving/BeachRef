{
  "name": "beachref-mvp",
  "version": "1.0.0",
  "description": "FIVB Beach Volleyball Tournament Viewer",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --passWithNoTests",
    "ci": "npm run lint && npm run type-check && npm run test:ci && npm run build",
    "ci:local": "echo 'Running complete CI pipeline locally...' && npm run lint && npm run type-check && npm run test:ci && npm run build && echo 'All CI steps passed! âœ…'",
    "ci:debug": "echo 'Testing TypeScript compilation...' && tsc --noEmit --verbose --listFiles | head -20 && echo 'Testing module resolution...' && node -e \"console.log('Module resolution test:', require.resolve('@testing-library/react'))\"",
    "ci:test-exactly": "echo 'Mimicking exact GitHub Actions environment...' && npm ci --no-audit --no-fund && npm run lint && npm run type-check && npm run test:ci && npm run build",
    "validate-deployment": "node scripts/validate-deployment.js",
    "test-deployment": "node scripts/test-deployment-reliability.js"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
